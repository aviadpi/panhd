<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background2"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/mainlinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.32"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="110dp" >

        <Button
            android:id="@+id/mainStartButton"
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.00"
            android:background="@drawable/film2s"
            android:drawableLeft="@drawable/camera"
            android:padding="5dp"
            android:text="@string/camerabutton"
            android:textColor="#ddffffff"
            android:textSize="15dp"
            android:typeface="serif" >
        </Button>

        <Button
            android:id="@+id/mainGalleryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:background="@drawable/background"
            android:drawableRight="@drawable/gallery48"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/gallerybutton"
            android:textColor="#ddffffff"
            android:textSize="13dp"
            android:typeface="serif" >
        </Button>
    </LinearLayout>

